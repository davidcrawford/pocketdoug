extends layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1 Add a bird!
      form(method="POST")
        .form-group
          label Name:
          input.form-control(type='text', name='name', placeholder='Crow')
        .form-group
          label Description:
          input.form-control(type='text', name='description', placeholder='Something interesting...')
        .form-group
          label Fun Fact:
          input.form-control(type='text', name='fun_fact', placeholder='Did you know this bird is actually a dinosaur???')
        .form-group
          label Photo url:
          input.form-control(type='text', name='photo_url', placeholder='http://...')

        .form-group
          label Commonality (0-100):
          input.form-control(type='text', name='commonality', placeholder='0')

        .form-group
          label Colors (Cmd-click to select multiple):
          select.form-control(multiple="true", name="color")
            each color in colors
              option= color

        .form-group
          label Size
          select.form-control(name="size")
            each size in sizes
              option= size

        button.btn.btn-default(type="submit") Submit
